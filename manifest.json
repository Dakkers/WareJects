{
 "name": "WareJects",
 "version": "1.0",
 "description": "Manage your software and hardware project ideas.",

 "permissions": [ "tabs", "https://*/*", "http://*/*"],

 "content_scripts": [
  {
  "matches": ["https://*/*"],
  "js" : ["js/jquery.min.js", "js/popup.js", "js/main.js", "js/tabs.js"]
  }
 ],

 "manifest_version": 2,
 "minimum_chrome_version": "17",

 "browser_action": {
  "default_icon": "icon.png",
  "default_popup": "popup.html"
 }
}